<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="2.5" type="template" client="site">
    <name>monVelo</name>
    <creationDate>April 2013</creationDate>
    <author>DEGENNES Charles-Antoine</author>
    <authorEmail>cadegenn@gmail.com</authorEmail>
    <authorUrl></authorUrl>
    <copyright>Copyright (C) 2013 DEGENNES Charles-Antoine</copyright>
    <license>GPL</license>
    <version>0.0.01</version>
    <description>Template webdesigned by DEGENNES Charles-Antoine</description>
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>params.ini</filename>
        <filename>changelog</filename>
        <folder>images</folder>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>js</folder>
    </files>
    <positions>
        <position>breadcrumbs</position>
		<position>permalink</position>
        <position>left</position>
        <position>right</position>
        <position>top</position>
        <position>footer</position>
        <position>syndicate</position>
        <position>debug</position>
        <position>user1</position>
        <position>user2</position>
        <position>user3</position>
        <position>user4</position>
        <position>user5</position>
        <position>user6</position>
    </positions>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="favicon" type="media" label="Favicon" description="Choisissez l'icône de votre site." />
                <field name="logoImage" type="media" label="Logo" description="Choisissez un logo dans la banque d'images." />
                <field name="logoText" type="text" default="monVélo.org" size="50" label="Texte du logo" description="Si vous n'avez pas de logo, écrivez votre titre ici." />
                <field name="sloganText" type="text" default="Des volontaires pour le vélo" size="50" label="Slogan" description="Si vous avez un sous_titre ou un slogan, écrivez-le là." />
            </fieldset>
        </fields>
    </config>
</extension>